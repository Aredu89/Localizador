extends layout

block content
  .row.page-header
    .col-lg-12
      p
        h2= pageHeader.title
        hr.my-4
  .row
    .col-xs-12.col-md-6
      form(action="", method="post", role="form", id='addReview')
        - if (error == "val")
          .alert.alert-dismissible.alert-warning
            button.close(type='button', data-dismiss='alert') ×
            h4.alert-heading Cuidado!
            p.mb-0
              | Todos los campos son requeridos, intente nuevamente.
        .form-group
          label(for='name') Nombre
          input#exampleInputEmail1.form-control(type='text', placeholder='Tu Nombre...', name='name')
        .form-group
          label(for='clasificacion') Clasificación
          select#exampleSelect1.form-control(name='calificacion')
            option 5
            option 4
            option 3
            option 2
            option 1
        .form-group
          label(for='comentario') Tu comentario:
          textarea#exampleTextarea.form-control(rows='3',name='comentario')
        button.btn.float-right.btn-primary(type='submit') Agregar Comentario
  .col-xs-12.col-md-4